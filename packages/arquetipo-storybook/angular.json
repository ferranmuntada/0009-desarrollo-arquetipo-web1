{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "newProjectRoot": "projects",
    "projects": {
        "app": {
            "projectType": "library",
            "schematics": {
                "@schematics/angular:component": {
                    "style": "scss"
                }
            },
            "root": "projects/app",
            "sourceRoot": "projects/app",
            "prefix": "app",
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-angular:browser",
                    "options": {
                        "stylePreprocessorOptions": {
                            "includePaths": [
                                "projects/app/assets",
                                "dist"
                            ]
                        },
                        "styles": [
                            "projects/app/assets/styles.scss"
                        ],
                        "assets": [
                            "projects/app/assets"
                        ],
                        "tsConfig": "projects/app/tsconfig.lib.json",
                        "scripts": [
                            "node_modules/apexcharts/dist/apexcharts.min.js"
                        ],
                        "aot": false,
                        "vendorChunk": true,
                        "extractLicenses": false,
                        "buildOptimizer": false,
                        "sourceMap": true,
                        "optimization": false,
                        "namedChunks": true
                    },
                    "configurations": {
                        "production": {
                            "tsConfig": "projects/app/tsconfig.lib.prod.json"
                        }
                    },
                    "defaultConfiguration": ""
                },
                "test": {
                    "builder": "@angular-devkit/build-angular:karma",
                    "options": {
                        "main": "projects/app/src/test.ts",
                        "tsConfig": "projects/app/tsconfig.spec.json",
                        "karmaConfig": "projects/app/karma.conf.js",
                        "codeCoverage": true
                    }
                },
                "lint": {
                    "builder": "@angular-devkit/build-angular:tslint",
                    "options": {
                        "tsConfig": [
                            "projects/app/tsconfig.lib.json",
                            "projects/app/tsconfig.spec.json"
                        ],
                        "exclude": [
                            "**/node_modules/**"
                        ]
                    }
                }
            }
        },
        "arquetipo-storybook": {
            "projectType": "library",
            "schematics": {
                "@schematics/angular:component": {
                    "style": "scss"
                }
            },
            "root": "projects/app",
            "sourceRoot": "projects/app/src",
            "prefix": "app",
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-angular:ng-packagr",
                    "options": {
                        "tsConfig": "projects/app/tsconfig.lib.json",
                        "project": "projects/app/ng-package.json"
                    },
                    "configurations": {
                        "production": {
                            "tsConfig": "projects/app/tsconfig.lib.prod.json"
                        }
                    }
                },
                "test": {
                    "builder": "@angular-devkit/build-angular:karma",
                    "options": {
                        "main": "projects/app/src/test.ts",
                        "tsConfig": "projects/app/tsconfig.spec.json",
                        "karmaConfig": "projects/app/karma.conf.js",
                        "codeCoverage": true
                    }
                },
                "lint": {
                    "builder": "@angular-devkit/build-angular:tslint",
                    "options": {
                        "tsConfig": [
                            "projects/app/tsconfig.lib.json",
                            "projects/app/tsconfig.spec.json"
                        ],
                        "exclude": [
                            "**/node_modules/**"
                        ]
                    }
                }
            }
        }
    },
    "defaultProject": "app",
    "cli": {
        "analytics": false
    }
}
